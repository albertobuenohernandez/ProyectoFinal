<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center"
    android:background="@drawable/fondomain" >

    <ImageView
        android:id="@+id/iconoPrincipal"
        android:layout_width="180dp"
        android:layout_height="300dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/logohl" />

    <EditText
        android:id="@+id/cuadroCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_redondo"
        android:ems="10"
        android:hint="@string/hintCorreo"
        android:inputType="textPersonName"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/contrasenia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_redondo"
        android:ems="10"
        android:hint="@string/hintContra"
        android:inputType="textPassword"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/botonIniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="#56AEA7"
        android:text="@string/hintIniciar"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/noTienesCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hintNoTienes"
        android:textColor="#191717"
        android:textColorLink="#0E1211"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/Registrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hintRegistrate"
        android:textColor="#14299F"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/ahoraNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ahoraNo"
        android:textColor="#FF1CA89B"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>