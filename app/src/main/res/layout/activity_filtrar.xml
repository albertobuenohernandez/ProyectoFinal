<?xml version="1.0" encoding="utf-8"?>
    <ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Filtrar"
        android:background="@drawable/fondofiltrar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/tituloCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/tituloCancelar"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textoPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/precio"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <Spinner
                    android:id="@+id/spinnerPrecioMin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/spinnerPrecio" />

                <Spinner
                    android:id="@+id/spinnerPrecioMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/spinnerPrecio" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textoMetros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Metros cuadrados m\u00B2"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <Spinner
                    android:id="@+id/spinnerMetrosMin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/spinnerMetros"/>

                <Spinner
                    android:id="@+id/spinnerMetrosMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/spinnerMetros"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textoDormitorios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/dormitorios"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/radioGroupDormitorios"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioDorm1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/radio1" />

                    <RadioButton
                        android:id="@+id/radioDorm2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/radio2" />

                    <RadioButton
                        android:id="@+id/radioDorm3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/radio3" />

                    <RadioButton
                        android:id="@+id/radioDorm4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/radio4" />
                </RadioGroup>

                <Button
                    android:id="@+id/botonMostrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="@string/botonMostrar" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>