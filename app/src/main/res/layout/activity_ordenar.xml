<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ordenar"
    android:background="@drawable/fondofiltrar">

    <TextView
        android:id="@+id/textoCancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/tituloCancelar"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/botonNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ordenNombre"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/botonPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ordenPrecio"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/botonMetros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ordenMetros"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/botonDormitorios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ordenDormitorios"
        android:layout_marginTop="20dp"/>
</LinearLayout>